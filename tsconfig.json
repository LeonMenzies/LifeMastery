{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "paths": {
      "~assets/*": ["assets/*"],
      "~components/*": ["src/components/*"],
      "~pages/*": ["src/pages/*"],
      "~recoil/*": ["src/recoil/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"]
    },
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
